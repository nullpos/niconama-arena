{
  "name": "ニコ生アリーナ",
  "version": "0.1.0",
  "manifest_version" : 2,
  "description": "[ニコニコ生放送] 自動入場/自動枠移動/コミュニティ,チャンネル,タイムシフト,公式生放送の一覧表示/通知/自動タブオープンなど",
  "background" : {
    "page" : "background.html"
  },

  "homepage_url": "https://github.com/yonchu/niconama-arena",

  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },

  "permissions": [
    "tabs",
    "notifications",
    "http://*.nicovideo.jp/"
  ],
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",

  "web_accessible_resources": [
    "icons/48.png"
  ],

  "browser_action": {
    "default_icon": {
      "19": "icons/19.png",
      "38": "icons/38.png"
    },
    "default_title" : "ニコ生アリーナ",
    "default_popup" : "html/popup.html"
  },

  "content_scripts": [{
    "all_frames": false,
    "run_at": "document_idle",
    "matches": [
      "http://live.nicovideo.jp/watch/*",
      "http://live.nicovideo.jp/gate/*"
    ],
    "css": ["css/autojump.css"],
    "js": [
      "js/lib/jquery-1.8.3.min.js",
      "js/debug.js",
      "js/autojump.js",
      "js/lib/ga.js"
    ]
  }]
}
